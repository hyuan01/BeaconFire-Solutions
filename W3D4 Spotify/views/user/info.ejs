<% layout('layouts/boilerplate') %> 

<h1>User Info</h1>
<h5>Username: <%= user[0].username %></h5>
<h5>Email: <%= user[0].email %></h5>
<h5>Password: <%= user[0].password %></h5>

<hr>

<h1>Edit Profile</h1>
<form action="/user/info?_method=PUT" method="POST">
    <label for="username">Username:</label><br>
    <input type="text" id="username" name="username" value="<%= user[0].username %>"><br>
    <label for="email">Email:</label><br>
    <input type="text" id="email" name="email" value="<%= user[0].email %>"><br>
    <label for="password">Password:</label><br>
    <input type="text" id="password" name="password" value="<%= user[0].password %>"><br>
    <button class="btn btn-success mt-2" name="id" value=<%= user[0]._id %>> Save </button>
</form>